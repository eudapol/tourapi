{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include":[
        "src/**/*.ts"
    ]
}